{
    "extends": [
        "tslint:recommended",
        "tslint-react",
        "tslint-config-prettier",
        "react-hooks"
    ],
    "rulesDirectory": [
        "tslint-plugin-prettier"
    ],
    "rules": {
        "prettier": true,
        "interface-name": false,
        "react-hooks/rules-of-hooks": "error",
        "react-hooks/exhaustive-deps": "warn"
    }
}